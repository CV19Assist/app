rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /aggregates/unfulfilledNeedsInfo {
      allow read: if true;
      allow write: if false;
    }

    match /needs/{needId} {
      allow read: if true;
      allow write: if true;
    }
  }
}